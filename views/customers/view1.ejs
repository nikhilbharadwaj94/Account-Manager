<% include ../partials/header %>

<!--ADD CUSTOM CODE HERE-->
<a href="/customers" class="btn btn-lg"><strong>BACK!!</strong></a><h1><center>View Customers and log Order</center></h1>
<div class="container">
     <div class="row">
        <span class="col-md-5"><h2><center>Name(Nickname)</center></h2></span>
        <span class="col-md-2"><h2><center>No. Of Breakfast</center></h2></span>
        <span class="col-md-2"><h2><center>No. Of Lunch</center></h2></span>
    </div>
    
        <% customers.forEach(function(customers){ %>
            <form class="row" action="/customers/view" method="POST" >
                <div style="margin: 10px 10px">
                 <span class="col-md-5"><center><input type="text" name="cust_name" value="<%=customers.name %>"></center></span>
                 <span class="col-md-2"><input type="text" name="breakfast_number" value="<%=customers.breakfast_default %>"></span>
                 <span class="col-md-2"><input type="text" name="lunch_number" value="<%=customers.lunch_default %>"></span>
                </div>   
                <span class="col-md-3"><button class="btn btn-secondary"> Log order!</button></span>
            </form>   
            <a href="/customers/view/<%= customers._id %>">More info...</a>   
        <% }); %>
       
</div>
